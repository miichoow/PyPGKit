# pypgkit Database Configuration
# Copy this file to .env and update values

# Connection settings
PYPGKIT_HOST=localhost
PYPGKIT_PORT=5432
PYPGKIT_DATABASE=myapp
PYPGKIT_USER=myuser
PYPGKIT_PASSWORD=mypassword

# Or use a connection string (overrides individual settings)
# PYPGKIT_CONNECTION_STRING=postgresql://user:password@localhost:5432/myapp

# Connection pool settings
PYPGKIT_MIN_CONNECTIONS=1
PYPGKIT_MAX_CONNECTIONS=10
PYPGKIT_CONNECTION_TIMEOUT=30.0
PYPGKIT_MAX_IDLE_TIME=600.0

# SSL settings (disable, allow, prefer, require, verify-ca, verify-full)
PYPGKIT_SSLMODE=prefer

# Health check (true/false)
PYPGKIT_CHECK_CONNECTION=true
